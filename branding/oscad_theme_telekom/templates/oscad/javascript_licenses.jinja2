{%- extends 'base.jinja2' -%}

{%- set page_title = request.select("Javascript Lizenzen", "Javascript Licenses") -%}
{%- set th_file    = request.select("Javascript Datei", "Javascript File") -%}
{%- set th_license = request.select("Lizenz", "License") -%}
{%- set th_source  = request.select("Quellen", "Source") -%}

{% block content %}
<h1>{{page_title}}</h1>

<table class="table" id="jslicense-labels1">
  <thead>
    <tr>
      <th>{{ th_file }}</th>
      <th>{{ th_license }}</th>
      <th>{{ th_source }}</th>
    </tr>
  </thead>
  <tbody>
    {% for lib in javascript_libraries %}
      <tr>
	<td><a href="{{lib.file_url}}"   >{{lib.file_name}}</td>
	<td><a href="{{lib.license_url}}">{{lib.license_name}}</td>
	<td><a href="{{lib.source_url}}" >{{lib.source_name}}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
