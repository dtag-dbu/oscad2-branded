<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="{{ request.application_url }}">
        OSCAd
      </a>
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse"
              data-target=".navbar-oscad-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse navbar-oscad-collapse">
      <ul class="nav navbar-nav">
        {%- for link in toplevel_links -%}
        <li {% if request.path == link[0] -%} class="active" {%- endif -%}>
          <a href="{{ link[0] }}">{{ link[1] }}</a>
        </li>
        {%- endfor -%}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {%- for lang in request.available_locales -%}
        <li {% if request.locale_name == lang -%} class="active" {%- endif -%}>
          <a href="{{ request.route_path('change_language', lang=lang) }}">
            {{ lang }}
          </a>
        </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</nav>
